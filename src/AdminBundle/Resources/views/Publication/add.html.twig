{% extends '@Admin/layout.html.twig' %}

{% block body %}
    <div class="well">
        <div class="row">
            <div class="col-xs-3">
                <!-- Nav tabs -->
                <div class="tabbable tabs-left">
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#main" aria-controls="main" role="tab" data-toggle="tab">Основные</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-xs-9">
                <!-- Tab panes -->
                {{ form_start(form, {'class' : 'form-horizontal'}) }}
                {{ form_errors(form) }}
                <div class="tab-content">
                    <div class="text-right">
                        <button class="btn btn-primary"  type="submit" style=""><span class="glyphicon glyphicon-floppy-save">&nbsp;</span>Сохранить</button>
                        <button class="btn btn-primary"  type="submit" style=""><span class="glyphicon glyphicon-floppy-save">&nbsp;</span>Сохранить и закрыть</button>
                    </div>
                    <br />
                    <div role="tabpanel" class="tab-pane active" id="main">


                        <div class="title"><div>Добавление новости</div></div>
                        <br />

                        <div class="form-group">
                            <label class="col-xs-2">Название</label>
                            <div class="col-xs-5">
                                {{ form_widget(form.title) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-xs-2">URL</label>
                            <div class="col-xs-5 ">
                                {{ form_widget(form.slug) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                {{ form_widget(form.body) }}
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}