<div class="modal fade" tabindex="-1" role="dialog" id="add-category">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Добавление категории</h4>
            </div>
                {{ form_start(form,{'attr': {'class' : 'form-horizontal' }}) }}
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-xs-3">Название</label>
                        <div class="col-xs-9">
                            {{ form_widget(form.title) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-3">URL</label>
                        <div class="col-xs-9">
                            {{ form_widget(form.url) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-3">Род. категория</label>
                        <div class="col-xs-9">
                            {{ form_widget(form.parent) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-3">Состояние</label>
                        <div class="col-xs-9">
                            {{ form_widget(form.enabled) }}
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                    {{ form_widget(form.submit) }}
                </div>
            {{ form_end(form) }}
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->